<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/br"
    tools:context=".fragment.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rlHrader">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/font1"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlHrader">
        <RelativeLayout
            android:id="@+id/rlUserInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civUserAvatar"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/avtbabe"></de.hdodenhof.circleimageview.CircleImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/civUserAvatar"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguyễn Thái Tường"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@+id/llFollower"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tvSLPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posts"
                    android:textColor="#000"
                    android:textSize="18sp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llFollower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_toLeftOf="@+id/llFollowing"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tvSLFlower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flowers"
                    android:textSize="18sp"
                    android:textColor="#000"></TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llFollowing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tvSLFollowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Following"
                    android:textSize="18sp"
                    android:textColor="#000"></TextView>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlUserInfo"
            android:id="@+id/rlButtonEdit"
            android:padding="10dp">
            <Button
                android:id="@+id/btEditProfile"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:text="Edit profile"
                android:background="@drawable/buttonbr"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"></Button>
            <Button
                android:id="@+id/btLogout"
                android:background="@drawable/buttonbr"
                android:layout_alignParentEnd="true"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:text="Log out"
                android:textAllCaps="false"
                android:paddingLeft="8dp"
                android:drawableLeft="@android:drawable/ic_lock_power_off"
                android:textAlignment="center"
                android:drawablePadding="-20dp"
                android:layout_marginRight="10dp"></Button>

        </RelativeLayout>
        <View
            android:id="@+id/vLine"
            android:layout_below="@+id/rlButtonEdit"
            android:layout_alignParentEnd="true"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#AEAEAE" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/vLine">

            <ListView
                android:id="@+id/list_view_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></ListView>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>